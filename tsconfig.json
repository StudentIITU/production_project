{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    // EsmoduleTnterop allows us to import default exports as if they were named exports
    // common js modules are exported as default exports
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
        "module": "CommonJS"
    }
  }
}